<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff2f4f5">

    <com.google.android.material.tabs.TabLayout
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        android:id="@+id/disco_tab"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorPrimaryDarkJianBian"
        app:tabIndicatorColor="#FFFFFF"
        app:tabSelectedTextColor="#FFFFFF"
        app:tabTextColor="#787e82"></com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:visibility="gone"
        android:background="#FFee21"
        android:id="@+id/fl_is_login"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="2dp"></FrameLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/disco_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/disco_tab">

    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>