<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bt_bubble_get_arr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取随机数组"
        android:textSize="20sp" />
    <Button
        android:layout_toRightOf="@id/bt_bubble_get_arr1"
        android:id="@+id/bt_bubble_get_arr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始排序"
        android:textSize="20sp"
         />
    <Button
        android:layout_toRightOf="@id/bt_bubble_get_arr2"
        android:id="@+id/bt_bubble_get_arr3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重置"
        android:textSize="20sp"
        />

    <ScrollView
        android:layout_below="@id/bt_bubble_get_arr3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_bubble_sort"
            android:layout_below="@id/bt_bubble_get_arr1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>
    </ScrollView>




</RelativeLayout>